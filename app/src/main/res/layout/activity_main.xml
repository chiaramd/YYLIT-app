<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/topBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Orange"
        android:fontFamily="serif-monospace"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/yylit"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        android:textColorLink="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/underTopBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="serif-monospace"
        android:text="@string/sub_heading"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView

        android:id="@+id/scrollbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbarStyle="insideOverlay"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/holo_blue_dark"
                android:fontFamily="casual"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/foodChoice"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/background_light"
                android:textSize="36sp"
                android:textStyle="bold|italic"
                android:typeface="normal" />

            <Button
                android:id="@+id/btnWater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/holo_blue_dark"
                android:fontFamily="casual"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/waterChoice"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/background_light"
                android:textSize="36sp"
                android:textStyle="bold|italic"
                android:typeface="normal" />

            <Button
                android:id="@+id/btnWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/holo_blue_dark"
                android:fontFamily="casual"
                android:onClick="btnWork"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/workChoice"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/background_light"
                android:textSize="36sp"
                android:textStyle="bold|italic"
                android:typeface="normal" />

            <Button
                android:id="@+id/btnTechnology"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/holo_blue_dark"
                android:fontFamily="casual"
                android:onClick="btnTechnology"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/technologyChoice"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/background_light"
                android:textSize="36sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/btnFamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/holo_blue_dark"
                android:fontFamily="casual"
                android:onClick="btnFamily"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/familyChoice"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/background_light"
                android:textSize="36sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/btnCommute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/holo_blue_dark"
                android:fontFamily="casual"
                android:onClick="btnCommute"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/commuteChoice"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/background_light"
                android:textSize="36sp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>